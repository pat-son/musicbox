<% provide(:title, @creation.name) %>
<%= javascript_tag do %>
    window.data = JSON.parse('<%= raw @creation.data %>')
<% end %>

<div>
  <input id="creation-name" class="form-control" name="name" type="text" placeholder="Title" value="<%= @creation.name %>">
  <button id="save-creation" class="btn btn-primary">Save</button>
</div>
<div id="create-song">
  <%= render "toolbar" %>
  <%= render "note_board" %>
</div>
<div>
  <% delete_button = '<button id="delete-creation" class="btn btn-danger">Delete</button>' %>
  <%= link_to raw(delete_button), @creation, {method: :delete, data: {confirm: "Delete this creation? This action is irreversible."}} %>
</div>
